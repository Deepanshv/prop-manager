
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to create, read, update, and delete their own properties.
    // The `ownerUid` on the property document must match the authenticated user's UID.
    match /properties/{propertyId} {
      allow read, update, delete: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;

      // Allow users to manage files only for properties they own.
      // This rule checks the `ownerUid` of the parent property document.
      match /files/{fileId} {
        allow read, create, delete: if request.auth != null && get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerUid == request.auth.uid;
      }
    }
  }
}
