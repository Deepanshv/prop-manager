
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read, write, and delete their own properties.
    // The ownerUid must match the user's UID.
    match /properties/{propertyId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;

      // Allow users to manage files associated with their own properties.
      match /files/{fileId} {
        allow read, write, delete: if request.auth != null && exists(/databases/$(database)/documents/properties/$(propertyId)) && get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerUid == request.auth.uid;
      }
    }
  }
}
