rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only create, read, update, or delete properties they own.
    match /properties/{propertyId} {
      allow read, update, delete: if request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth.uid == request.resource.data.ownerUid;

      // The owner of a property can manage the files in its subcollection.
      match /files/{fileId} {
         allow read, write, delete: if request.auth.uid == get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerUid;
      }
    }
  }
}
