
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Users can only read from and write to their own folder (`/users/{uid}/...`).
    // This rule covers property files and other user-specific uploads.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile pictures can be written by the user, and read by anyone (since they are public).
    match /profile-pictures/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
